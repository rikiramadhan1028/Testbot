# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# Alternative RPCs for better performance:
# SOLANA_RPC_URL=https://solana-api.projectserum.com
# SOLANA_RPC_URL=https://rpc.ankr.com/solana

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Database (MongoDB)
MONGODB_URI=mongodb://localhost:27017/roku_trade

# Jupiter API (for DEX aggregation)
JUPITER_API_URL=https://quote-api.jup.ag/v6

# DEX Screener API
DEX_SCREENER_API=https://api.dexscreener.com/latest

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/roku-trade.log

# Development
NODE_ENV=production
PORT=3000

# Copy Trading Settings
COPY_TRADE_DELAY=5000
MAX_COPY_AMOUNT=1

# Sniping Settings
SNIPE_GAS_LIMIT=100000
SNIPE_MAX_SLIPPAGE=10

# Auto Trading
AUTO_TRADE_INTERVAL=10000
MAX_POSITIONS_PER_USER=50

# Webhook (for advanced features)
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_SECRET=your_webhook_secret